try:
    fh = open('xlines.txt')
    # strips any trailing /n from the end of the string
    # and prints out each line - same as end=''
    #for line in fh: print(line.strip()) 
    
    for line in fh.readlines():
        print(line)
except IOError as e:
    print("something bad happened: ({})".format(e))
    
print("after badness")
